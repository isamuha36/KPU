<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#00A000"
    tools:context=".LoginActivity">

    <!-- Logo KPU -->
    <ImageView
        android:id="@+id/logoKPU"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_kpu"
        android:layout_marginTop="30dp" />

    <!-- Deskripsi Aplikasi -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Aplikasi ini di gunakan oleh petugas KPU untuk mendata peserta pemilu"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp" />

    <!-- Container untuk Form Login -->
    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="center"
        android:background="#0077b5"
        android:layout_margin="20dp">

    <!-- Input Username -->
    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:background="#DDDDDD"
        android:padding="10dp"
        android:layout_marginBottom="15dp" />

    <!-- Input Password -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="#DDDDDD"
        android:padding="10dp"
        android:layout_marginBottom="15dp" />

    <!-- Tombol Login -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Login"
        android:background="#DDDDDD"
        android:textColor="#000000"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" />
</LinearLayout>
    </LinearLayout>
